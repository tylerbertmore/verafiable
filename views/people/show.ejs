                            <p>Partner Tattoos?</p>
                            <div class="show-text">
                                <h5>
                                    <%= person.partnerTattoos %>
                                    </h5>
                            </div>
                        </div>
                    
                </div>
            
        </div>
        
        
        <div class="profile-section personality-container">
            <div class="personality-row">
                <% if(person.exercise !== 'Never'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-dumbbell"></i>
                        <p>Exercises <%= person.exercise %></p>
                    </div>
             <%   }  %>
                <% if(person.cigaretteUse !== 'Never'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-smoking"></i>
                        <p>Smokes <%= person.cigaretteUse %></p>
                    </div>
             <%   }  %>
                <% if(person.alcoholUse !== 'Never'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-beer"></i>
                        <p>Drinks <%= person.alcoholUse %></p>
                    </div>
             <%   }  %>
                <% if(person.marijuanaUse !== 'Never'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-cannabis"></i>
