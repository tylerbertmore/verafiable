                    </div>
             <%   }  %>
                <% if(person.children !== 'No'){ %>
                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-child"></i>
                        <p>Kids: <%= person.children %></p>
                    </div>
             <%   }  %>
                <% if(person.wantChildren !== 'No'){ %>
                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-baby"></i>
                        <p>Wants Kids</p>
                    </div>
             <%   }  %>
                </div>
        </div>
