                        </div>
                    </div>
                    <div class="show-container">
                        <p>Family In Vegas:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.familyInVegas %>
                                </h5>
                        </div>
                    </div>
                </div>
                <div class="profile-overview-text hidden header-personality">
                    <div class="show-container">
                        <p>Hobbies: </p>
                        <div class="show-text">
                            <h5>
                                <%= person.hobbies1 %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p> </p>
                        <div class="show-text">
                            <h5>
                                <%= person.hobbies2 %>
