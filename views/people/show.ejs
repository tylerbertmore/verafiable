                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-leaf"></i>
                        <p>Outdoorsy</p>
                    </div>
             <%   }  %>
                <% if(person.books === 'Yes'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-book"></i>
                        <p>Bookworm</p>
                    </div>
             <%   }  %>
                <% if(person.travel !== 'Never'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-plane-departure"></i>
                        <p>Likes Travel</p>
                    </div>
             <%   }  %>
                <% if(person.gamer !== 'No'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-gamepad"></i>
                        <p>Likes Gaming</p>
                    </div>
             <%   }  %>
                <% if(person.pets !== 'No'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-paw"></i>
                        <p>Has Pet(s)</p>
                    </div>
             <%   }  %>
                <% if(person.military !== 'No'){ %>

                    <div class="icon-button-sm">
                        <i class="tooltip fas fa-star"></i>
