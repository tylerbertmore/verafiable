<%- include('../partials/header') %>
<main >
    <%- include('../partials/flash') %>

    <h1><%= person.firstName %>'s Profile</h1>
    <div class="profile-container">
        <div class="profile-top">
            <div class="profile-pic">
                <img src="/images/default-profile.jpeg">
                <button id="profile-edit-btn">Edit Profile</button>
            </div>
            <div class="profile-overview">
                <h2>Overview</h2>
                <div class="profile-overview-text">
                    <p><span>Name:</span> <%= person.firstName %> <%= person.lastName %></p>
                    <p><span>Gender:</span> <%= person.gender %></p>
                    <p><span>Age:</span> <%= new Date().getFullYear() - person.birthday.getFullYear(); %></p>
                    <p><span>Seeking:</span> <%= person.seeking %> between <%= person.ageRange %></p>
                    <p><span>Ethnicity: </span><%= person.ethnicity %></p>
                    <p><span>Religion: </span><%= person.religion %></p>
                    <p><span>Politics: </span><%= person.politics %></p>
                    <p><span>Previously Married:</span> <%= person.prevMarried %></p>
                    <p><span>Has Children:</span> <%= person.children %></p>
                    <p><span>Wants Children: </span> <%= person.wantChildren %></p>
                    <p><span>Willing to be Step Parent: </span> <%= person.stepParent %></p>

                </div>
            </div>
        </div>
        <div class="profile-section">
            <h2>Recreation</h2>
            <div class="profile-section-text">
                <p><span>Hobbies: </span><%= person.hobbies1 %>, <%= person.hobbies2 %>, <%= person.hobbies3 %></p>
                <p><span>Marijuana Use: </span><%= person.marijuanaUse %></p>
                <p><span>Cigarette Use: </span><%= person.cigaretteUse %></p>
                <p><span>Alcohol Use: </span><%= person.alcoholUse %></p>
                <p><span>Exercise: </span><%= person.exercise %></p>
                <p><span>Outdoorsy: </span><%= person.outdoorsy %></p>
                <p><span>Bookworm: </span> <%= person.books %></p>
                <p><span>Gamer: </span> <%= person.gamer %></p>
            </div>
            
        </div>
        
        <div class="profile-section">
            <!--------------------------------------------------->
            <!--                     recreation                
            <--------------------------------------------------->
            
            <div class="icon-container">
                <div class="icon-container-top">
                <div class="icon-text-container">
                    <i class="tooltip fas fa-cannabis"><span class="tooltiptext"><%= person.marijuanaUse %></span></i>
                    <p>Marijuana Use</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-beer"></i>
                    <p>Alcohol Use</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-smoking"></i>
                    <p>Cigarettes</p>
                </div>
            </div>
            <div class="icon-container-bottom">
                <div class="icon-text-container">
                    <i class="fas fa-network-wired"></i>
                    <p>Social Media Use</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-tv"></i>
                    <p>TV Watching</p>
                </div>
                <div class="icon-text-container">
                    <i class="fas fa-gamepad"></i>
                    <p>Gamer</p>
                </div>
            </div>    
            </div>

<!--------------------------------------------------->
<!--                     kids / military               
<--------------------------------------------------->

            <div class="icon-container">
                <div class="icon-container-top">
                <div class="icon-text-container">
                    <i class="tooltip fas fa-baby"><span class="tooltiptext"><%= person.marijuanaUse %></span></i>
                    <p>Wants Kids</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-child"></i>
                    <p>Kids</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-ring"></i>
                    <p>Married Before</p>
                </div>


            </div>
            <div class="icon-container-bottom">
                <div class="icon-text-container">
                    <i class="tooltip far fa-star"></i>
                    <p>Military</p>
                </div>
                <div class="icon-text-container">
                    <i class="tooltip fas fa-user-shield"></i>
                    <p>Military Spouse</p>
                </div>


            </div>    
            </div>

            <!--------------------------------------------------->
            <!--                     Outdoorsy                
            <--------------------------------------------------->
            
            <div class="icon-container">
                <div class="icon-container-top">
                <div class="icon-text-container">
                    <i class="tooltip fas fa-leaf"><span class="tooltiptext"><%= person.marijuanaUse %></span></i>
                    <p>Outdoorsy</p>
                </div>
                <div class="icon-text-container">
                    <i class="fas fa-dumbbell"></i>
                    <p>Exercise</p>
                </div>
                <div class="icon-text-container">
                    <i class="fas fa-book"></i>
                    <p>Bookworm</p>
                </div>


            </div>
            <div class="icon-container-bottom">
                <div class="icon-text-container">
                    <i class="fas fa-paw"></i>
                    <p>Pets</p>
                </div>



            </div>    
            </div>


        </div>
    </div>
</main>
<%- include('../partials/footer') %>