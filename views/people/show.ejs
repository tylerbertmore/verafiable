<%- include('../partials/header') %>
<main >
    <%- include('../partials/flash') %>
    <script>
        document.title = `Verafied™ - <%= person.firstName %>'s Profile` 
        </script>

    <h1><%= person.firstName %>'s Profile</h1>
    <div class="profile-container">
        
        <div class="profile-top">
            <div class="profile-pic">
                <div class="profile-carousel-container">
                    <% if(person.uploadedImages === []){ %>
                        <img src="/images/default-profile.jpeg">
                        <div class="profile-carousel-track">
                            <img src="/images/default-profile.jpeg">
                            <img src="/images/default-profile.jpeg">
                            <img src="/images/default-profile.jpeg">
                            <img src="/images/default-profile.jpeg">
                            <img src="/images/default-profile.jpeg">
                        </div>
                    <% } else { %>
                        <a target="_blank" id="profile-img-container" href="/<%= person.uploadedImages[0].path %>">
                            <img id="profile-img-top" src="/<%= person.uploadedImages[0].path %>">
                        </a>
                        <div class="profile-carousel-track">
                            <img id="carousel-img-zero" class="active" src="/<%= person.uploadedImages[0].path %>">
                            <img id="carousel-img-one" src="/<%= person.uploadedImages[1].path %>">
                            <img id="carousel-img-two" src="/<%= person.uploadedImages[2].path %>">
                            <img id="carousel-img-three" src="/<%= person.uploadedImages[3].path %>">
                            <img id="carousel-img-four" src="/<%= person.uploadedImages[4].path %>">
                        </div>
                        <% } %>
                </div>
                
                <div class="edit-btns">
                    <a href="<%= person.id %>/edit"><button id="profile-edit-btn">Edit Profile</button></a>
                    <a href="<%= person.id %>/pictures"><button id="profile-pic-btn">Add Pictures</button></a>
                </div>
            </div>

            <div class="profile-overview">
                
                <div id="profile-header-btns">
                    <button class="header-btn header-1 active">Overview</button>
                    <button class="header-btn header-2">Personality</button>
                    <button class="header-btn header-3">Career/Hobbies</button>
                    <button class="header-btn header-4">Body Art</button>
                    <button class="header-btn header-5">Family</button>
                </div>
                <div class="profile-overview-text header-overview">
                    <div class="show-container">
                        <p>Name:</p>
                        <div class="show-text">
                            <h5><%= person.firstName %> <%= person.lastName %>
                                <% if(person.gender === 'Female') { %>
                                    <i class="fas fa-venus"></i>
                                    <% } %>
                                <% if(person.gender === 'Other') { %>
                                    <i class="fas fa-transgender-alt"></i>
                                    <% } %>
                                <% if(person.gender === 'Male') { %>
                                    <i class="fas fa-mars"></i>
                                    <% } %>
                            </h5>
                        </div>
                    </div>
                    <div class="show-container">
                        <p>Age:</p>
                        <div class="show-text">
                            <h5>
                                <% function _calculateAge(birthday) { %>
                                <%   var ageDifMs = Date.now() - birthday.getTime(); %>
                                  <% var ageDate = new Date(ageDifMs); %>
                                 <%  return Math.abs(ageDate.getUTCFullYear() - 1970); %>
                               <% } %>
                               <%= _calculateAge(person.birthday) %>
                                </h5>
                        </div>
                    </div>
                    <div class="show-container">
                        <p>Seeking:</p>
                        <div class="show-text">
                            <h5>
                                <% if(person.seeking === 'Both') { %>
                                    <%= person.seeking %> Men and Women age <%= person.ageRange %>
                                    <% } else { %>
                                <%= person.seeking %> age <%= person.ageRange %>
                                    <% } %>
                                </h5>
                        </div>
                    </div>
                    <div class="show-container">
                        <p>Height:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.height %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p>Ethnicity:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.ethnicity %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p>Body Type:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.bodyType %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p>Politics:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.politics %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p>Religion:</p>
                        <div class="show-text">
                            <h5>
                                <%= person.religion %>
                                </h5>
                        </div>
                    </div> 
                    <div class="show-container">
                        <p>From:</p>
